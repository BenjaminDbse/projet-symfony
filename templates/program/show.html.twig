{% extends 'base.html.twig' %}

{% block title %}Série #{{ program.id }}{% endblock %}

{% block body %}
    <div class="media">
        <img class="align-self-start" src="{{program.poster}}" alt="{{ program.title }} poster">
        <div class="media-body">
            <h1 class="mt-0">{{ program.title }}</h1>
            <p>{{ program.summary }}</p>
            <p>Catégorie : {{ program.category.name }}</p>
            <h2>Voir les saisons disponible :</h2>
            <ul>
            {% for season in seasons %}
                <li><a class="btn btn-secondary" href="{{ path('program_season_show', {program_slug: program.slug, seasonId: season.id}) }}">Saison {{ season.number }}</a></li>
            {% endfor %}
            </ul>
            <h2>Acteurs :</h2>
            <ul>
                {% for actor in program.actors %}
                    <li><p><a href="{{ path("actor_show", { id: actor.id }) }}" >{{ actor.name }}</a></p> </li>
                {% else %}
                    <li>Aucun acteur pour cette série</li>
                {% endfor %}
            </ul>
            {% if is_granted("ROLE_ADMIN") %}
                <a class="btn btn-secondary" href="{{ path('program_edit', { 'slug': program.slug} ) }}">Éditer</a>
            {%endif%}
            <a class="btn btn-primary" href="{{ path('program_index') }}">Retour à la liste des programmes</a>
        </div>
    </div>
{% endblock %}
