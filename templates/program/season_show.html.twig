{% extends 'base.html.twig' %}

{% block body %}
    <h1>Saison {{ season.number }} de {{ program.title }}</h1>
    <p>{{ season.description }}</p><br>
    <p>Liste des épisodes :</p>
    <ul>
        {% for episode in episodes %}
            <li><a href="{{ path('program_episode_show', {program: program.id, season: season.id, episode: episode.id}) }}">Episode {{ episode.number }}: {{ episode.title }}</a></li>
            <p>{{ episode.summary }}</p>
        {% endfor %}
    </ul>
    <a class="btn btn-primary" href="{{ path("program_show", { program_id: program.id }) }}">Retour à la fiche</a>
{% endblock %}
