{% extends 'base.html.twig' %}

    {% block title %}All categories{% endblock %}

{% block body %}
    <h1>Toutes les catégories </h1>
    {% for category in categories %}
        <div>
            <h2>{{ loop.index }}/ {{ category.name }}</h2>
            <a class="btn btn-secondary" href="{{ path("category_show", { categoryName: category.name }) }}">Voir la categorie</a>
        </div>
    {% else %}
        Aucune catégorie trouvée.
    {% endfor %}

    <a class="btn btn-primary" href="{{ path('app_index') }}">Retour à l'accueil</a>
{% endblock %}