{% extends 'base.html.twig' %}

{% block title %}{{ 'index'|trans }} {{ 'episode'|trans }}{% endblock %}

{% block body %}
    <h1>{{ 'index'|trans }} {{ 'episode'|trans }}</h1>

    <table class="table">
        <thead>
            <tr>
                <th>ID</th>
                <th>{{ 'title'|trans }}</th>
                <th>{{ 'number'|trans }}</th>
                <th>{{ 'summary'|trans }}</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for episode in episodes %}
            <tr>
                <td>{{ episode.id }}</td>
                <td>{{ episode.title }}</td>
                <td>{{ episode.number }}</td>
                <td>{{ episode.summary }}</td>
                <td>
                    <a href="{{ path('episode_show', {'slug': episode.slug}) }}">{{ 'look'|trans }}</a>
                    <a href="{{ path('episode_edit', {'slug': episode.slug}) }}">{{ 'edit'|trans }}</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('episode_new') }}">{{ 'create new'|trans }}</a>
{% endblock %}
